<!-- Modal -->
<div id="addNoteModal<%=task._id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add note</h4>
            </div>           
            <div class="modal-body">
                <form class="create-subtask-form" >
                    <input type="hidden" name="_id" value="<%= task._id %>">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>">
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1">
                            <div class="form-group">
                                <label>Subtask</label>
                                <input type="text" class="form-control inputs" name='name' >
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Add subtask</button>
                </form>
                <form method="POST" action="/notes/toTask" >
                    <input type="hidden" name="_id" value="<%= task._id %>">
                    <input type="hidden" name="_csrf" value="<%= _csrf %>">
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1">
                            <div class="form-group">
                                <label>Note</label>
                                <textarea rows="5" class="form-control inputs" name='desc' ></textarea>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Add note</button>
                </form>
            </div>
        </div>
    </div>
</div>