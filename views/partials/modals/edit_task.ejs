<!-- Modal -->
<div id="editModal<%=task._uuid%>" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit task</h4>
                <ul>
                <li>last modified: <%= moment(new Date(task.modified)).format('YYYY-MM-DD HH:mm') %></li>
            </ul>
            </div>
            <form method="POST" action="/tasks/edit" >
                <input type="hidden" name="_method" value="put">
                <input type="hidden" name="_uuid" value="<%= task._uuid %>">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1">
                            <div class="form-group">
                                <label>Name</label>
                                <input type="text" class="form-control inputs" name='name' value="<%= task.name %>">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea rows="5" class="form-control inputs" name='desc' ><%= task.desc %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Edit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Wróć</button>
                </div>
            </form>
        </div>
    </div>
</div>