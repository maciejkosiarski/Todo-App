<!-- Modal -->
<div id="editModal<%=task._id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit task</h4>
                <ul>
                    <li>last modified: <%= moment(new Date(task.modified)).format('YYYY-MM-DD HH:mm') %></li>
                </ul>
            </div>
            <form method="POST" action="/tasks/edit" >
                <input type="hidden" name="_method" value="put">
                <input type="hidden" name="_id" value="<%= task._id %>">
                <input type="hidden" name="_csrf" value="<%= _csrf %>">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1">
                            <div class="form-group modal-form">
                                <label for="priority-input">Priority</label>
                                <select class="form-control select-input priority-<%= task.priority %>" id="priority-input" name="priority">
                                    <% for(var level in config.priority) { %>
                                    <option class="priority-<%= config.priority[level] %>" value="<%= config.priority[level] %>"<% if(config.priority[level] == task.priority){ %> selected <% } %> ><%= level %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group modal-form">
                                <label>Name</label>
                                <input type="text" class="form-control inputs" name='name' value="<%= task.name %>">
                            </div>
                            <div class="form-group modal-form">
                                <label>Description</label>
                                <textarea rows="5" class="form-control inputs" name='desc' ><%= task.desc %></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default">Edit</button>
                </div>
            </form>
        </div>
    </div>
</div>